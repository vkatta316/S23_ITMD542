extends layout

block content
  header(id="list-header")
    h1= title
  if contact.length> 0
  #contact-wrapper 
    ul.contact-details 
      li= `First Name : ${contact.contactData.firstName}`
      li= `Last Name  :  ${contact.contactData.lastName}`
      li= `Email      : ${contact.contactData.email}`
      li= `Notes      :      ${contact.contactData.notes}`
      li= `Created On : ${contact.contactData.date}`
          
  div.contact-form-btn-ctn
    div(class="ctn-1 ctn-ph-2 flexbox flex-center")
      div.col-1
        a(id = "contact-form-send" href=`/contacts`) View All Contacts
      div(class="col-1 contact-form-cta-social")
        a(id = "contact-form-send" href= `/contacts/${contact.id}/delete`) Delete Contact
      div(class="col-1 contact-form-cta-social")
        a(id = "contact-form-send" href= `/contacts/${contact.id}/edit`) Edit Contact