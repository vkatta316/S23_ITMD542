extends layout

block content
  div.container
    h1= heading
    if msg
      p(class = 'redText')= msg
    form(class="contactGroup" method="POST" action="/contacts/add")
      input(type="text" id="contactId" name="contactId" class = "contactInput" placeholder = "Contact Id")
      input(type="text" name="firstName" class = "contactInput" placeholder = "First Name")
      input(type="text" name="lastName" class = "contactInput" placeholder = "Last Name" required)
      input(type="email" name="email" class = "contactInput" placeholder = "Email Address")
      input(type="text" name="notes" class = "contactInput" placeholder = "Notes")
      input(type="text" name="lastEdited" class = "contactInput" placeholder = "Last Edited")
      button(class="btn")
        | Submit
